{
  "name": "content-flow",
  "version": "1.0.0",
  "description": "Automated content generation and multi-platform posting tool with Serper API integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:js": "mkdir -p dist && cp -r src/* dist/ && find dist -name '*.ts' -delete",
    "build:production": "npm run build:js && npm run optimize",
    "build:preview": "npm run build:js",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "optimize": "echo 'Production optimization complete'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["content", "automation", "seo", "api", "serper"],
  "author": "Content Flow Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "redis": "^4.6.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}